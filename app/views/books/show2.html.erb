<table class="book" summary="Book information">
	<tr>
		<td class="main">
			<h1>
			  <%= @book.title %>
			</h1>
			<ul>
				<li><strong>ID</strong>  <%= @book.id %></li><br />
				<li><strong>Author</strong>  <%= @book.author %></li><br />
				<li><strong>Publisher</strong>  <%= @book.publisher %></li><br />
				<li><strong>ISBN</strong>  <%= @book.isbn %></li><br />
			</ul>
			<p>just before test for signed_in</p>
			<% unless signed_in? %>
			<p>signed in user</p>  
			<table class="front" summary="For signed-in users">
				<tr>
					<td class="main">
						<h1 class="comment">Add a comment for this book</h1>
						<%= render 'shared/comment_form' %>
					</td>
				</tr>
			   </table>
			<% end %>
			<% unless @book.comments.empty? %>
			  <table class="comments" summary="Book comments">
				<% render @comment %>
			  </table>
			  <%= will_paginate @comments %>
			<% end %>
		</td>
		<td class="sidebar round">
			<strong>Total votes:</strong> <%= @book.votes_from.count %>
			<%= render 'vote_form' if signed_in? %>
		</td>
	</tr>
</table>