<tr>
	<td class="comment">
		<span class="content"><%= @comment %></span>
		<span class="timestamp">
			Posted <%= time_ago_in_words(Time.now) %> ago.
		</span>
	</td>
	<% if current_user?(@comment.user) %>
	<td>
		<%= link_to "delete", comment, :method => :delete,
											:confirm => "Are you sure?",
											:title => @comment %>
	</td>
	<% end %>
</tr>
