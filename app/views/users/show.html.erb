<table class="profile" summary="Profile information">
	
	<tr>
		<td class="main">
			<h1>
			  <%= gravatar_for @user %>
			  <%= @user.name %>
			</h1>
			<%= render 'follow_form' if signed_in? %>
			<% if current_user.admin? %>
			  <%= button_to "Delete this user", @user, :method => :delete, :confirm => "Are you sure", :title => "Delete user" %>
			  <% end %>
			<% unless @user.microposts.empty? %>
			  <table class="microposts" summary="User microposts">
				<%= render @microposts %>
			  </table>
			  <%= will_paginate @microposts %>
			<% end %>
		</td>
		<td class="sidebar round">
			<strong>Name</strong>  <%= @user.name %>
			<% unless !current_user?(@user)%><br/>
			<%= link_to "Update your profile", edit_user_path(current_user) %><br/>
			<% end %>
			<br/>
			<strong>Microposts </strong> <%= @user.microposts.count %>
			<%= render 'shared/stats' %>
			<% @books = @user.books %>
			<% unless @books.empty? %>
			  <strong>Books added </strong> <%= @user.books.count %><br/>
			  <% @books.each do |book| %>
				<%= link_to image_tag(book.image_url, :class => 'list_image', :size => '30x30'), book %>
			  <% end %>
			<% end %>
			<br/>
			<% @books_voted_for = @user.votes_for %>
			<% unless @books_voted_for.empty? %>
			  <strong>Votes casted </strong> <%= @user.votes.count %><br/>
			  <% @books_voted_for.each do |book| %>
			    <%= link_to image_tag(book.image_url, :class => 'list_image', :size => '30x30'), book %>
			  <% end %>
			<% end %>
			<br/>
			<strong>Comments made </strong> <%= @user.comments.count %><br/>
			<br/>
			
		</td>
	</tr>
</table>
