<tr>
	<td class="user-gravatar">
	   <%= gravatar_for user, :size => 30 %>
	</td>
	<td class="user-name">
	   <%= link_to user.name, user %>
	   <% if user.admin?%>
	      **Admin** 
	   <% end %>
	</td>
	<td class="user-votes">
	  <%= user.votes.count %> votes
	</td>
	<td class="user-comments">
	  <%= user.comments.count %> comments
	</td>
</tr>
	