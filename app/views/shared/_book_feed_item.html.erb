<tr>
	<td class="comment">
		<span class="commentline">
		  <%= book_feed_item.comment %></span><br/>
		<span class="timestamp">
			Posted <%= time_ago_in_words(book_feed_item.created_at) %> ago
			<% if signed_in? %>
			  by <%= link_to book_feed_item.user.name, book_feed_item.user %>.
			<% end %>
		</span>
	</td>
	<% if current_user?(book_feed_item.user) %>
	<td>
		<%= button_to "Delete", book_feed_item, :method => :delete, :confirm => "Are you sure", :title => "Delete comment" %>
	</td>
	<% end %>
</tr>