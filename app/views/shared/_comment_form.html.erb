<%= form_for @book.comments.build( :book_id => @book.id) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.hidden_field :book_id %>
	</div>
	<div class="field">
		<%= f.text_area :comment %>
	</div>
	<div class="actions">
		<%= f.submit "Add your comment" %>
	</div>
<% end %>